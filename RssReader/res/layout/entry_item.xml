<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <TextView android:id="@+id/entry_item_updated"
			    android:textIsSelectable="false"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:textColor="#778899"
			    android:background="#DCDCDC"
			    android:textSize="14sp"
			    android:paddingLeft="10dip"/>
        
    <RelativeLayout android:orientation="horizontal"  
    	android:layout_width="wrap_content"  
   	 	android:layout_height="fill_parent"
   	 	android:paddingTop="5dip"
   	 	android:paddingLeft="5dip">
   	 	
         <CheckBox android:id="@+id/entry_item_selected"
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_margin="5dip"
	    		android:layout_centerVertical="true"
	    		android:layout_alignParentRight="true"/>
        
	    <TextView android:id="@+id/entry_item_summary"
			    android:textIsSelectable="false"
			    android:textColor="#BEBEBE"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:gravity="left"
			    android:textSize="16sp"
			    android:layout_toLeftOf="@id/entry_item_selected"
			    android:paddingBottom="2dip"/>
	    
	    <ImageView android:id="@+id/entry_item_icon"
		        android:contentDescription="@string/app_name"
		        android:layout_width="65dip"
		        android:layout_height="65dip"
		        android:layout_centerVertical="true"
	        	android:layout_alignParentRight="true"/>
	    
	  
	 </RelativeLayout>
	 

</LinearLayout>